.container {
	display: flex
	justify-content: center
	align-items: center
	padding: 20px
	box-sizing: border-box

	@media (max-width: 700px) {
		flex-direction: column
	}

	>div {
		flex: 1
		overflow: scroll
		max-height: 100%

		>textarea {
			width: 90%
			height: 100%
			font-family: 'Noto Serif', serif
		}
	}
}